@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Attending";
}

<ul class="gigs">
    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name

                    @if (gig.IsCancelled)
                    {
                        <span class="label label-warning">CANCELLED</span>
                    }

                    @if (Model.ShowActions)
                    {
                        <button data-artist-id="@gig.Artist.Id" data-follower-id="@User.Identity.Name" class="btn btn-link btn-sm pull-right js-toggle-follow">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @if (Model.ShowActions && !gig.IsCancelled)
                {
                    <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going ?</button>
                }
            </div>
        </li>

    }
</ul>